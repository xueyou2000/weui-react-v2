{
  "name": "weui-react-v2",
  "version": "3.0.0-beta.1",
  "description": "weui的react实现",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "dist/src/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "npm run build-bundle && father-build",
    "build-bundle": "father-build --esm=babel --cjs=babel",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "precommit": "lint-staged"
  },
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "author": {
    "name": "XueYou",
    "email": "xueyoucd@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react-component",
    "weui"
  ],
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "classnames": "^2.2.6",
    "postcss-plugin-px2rem": "^0.8.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-spring": "^8.0.27",
    "umi-hd": "^5.0.1",
    "use-merge-value": "^1.0.2",
    "utils-hooks": "^0.0.78",
    "xy-grid": "^0.1.0",
    "xy-spin": "^0.1.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.15",
    "@types/react-test-renderer": "^16.9.3",
    "@types/vfile-message": "^2.0.0",
    "@umijs/test": "^3.2.24",
    "chalk": "^4.1.0",
    "dumi": "1.1.0-beta.27",
    "dumi-theme-mobile": "^1.0.0-beta.5",
    "father-build": "^1.18.5",
    "gh-pages": "^3.1.0",
    "globby": "^11.0.1",
    "lint-staged": "^10.5.0",
    "ora": "^5.1.0",
    "prettier": "^2.1.2",
    "react-test-renderer": "^17.0.1",
    "yorkie": "^2.0.0"
  }
}
